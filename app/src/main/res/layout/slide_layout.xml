<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/welcome_img_1"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/slide_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="80dp"/>
    <TextView
            android:text="Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/slide_heading"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textSize="23sp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/colorWelcomeWhite"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_below="@+id/slide_image"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/slide_text"
            android:textAlignment="center"
            android:lineSpacingExtra="5sp"
            android:layout_below="@id/slide_heading"
            android:textSize="17sp"
            android:textColor="@color/colorWelcomeTransparentWhite"
            android:fontFamily="@font/ubuntu"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>
</RelativeLayout>